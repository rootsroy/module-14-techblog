<article>
    <a href="/dashboard">&larr; Back to dashboard</a>
    <div class="card">
        <div class="card-header">
            Edit Post
        </div>
        <div class="card-body">
            <form class="edit-post-form">
                <div>
                    <input class="form-input" type="text" name="post-title" value="{{post.title}}" />
                    <textarea class="form-textarea" name="post-content">{{post.content}}</textarea>
                </div>
                <div>
                    <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
                </div>
                <button class="btn" type="submit">Update Post</button>
                <button class="btn delete-post-btn" type="button">Delete Post</button>
            </form>
        </div>
    </div>
</article>

{{> comment-form}}

{{> comments post.comments }}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>